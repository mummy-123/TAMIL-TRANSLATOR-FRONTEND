<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FC">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2563EB"
        app:navigationIcon="@drawable/ic_back"
        app:title="Voice Translation"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/menu_settings"/>

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Speak Now"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Tap the microphone to start"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Mic Button -->
        <ImageButton
            android:id="@+id/btnMic"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_circle_blue"
            android:src="@drawable/ic_mic"
            android:padding="28dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <Button
            android:id="@+id/btnMode"
            android:text="English âžœ Tamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"/>

        <!-- Detected Language -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_translation_box"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Detected:"
                android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDetectedLang"
                android:text=" English"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Spoken Text -->
        <TextView
            android:id="@+id/txtSpoken"
            android:text=""
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Translation -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_translation_box"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTranslated"
                android:text=""
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btnSpeak"
                android:src="@drawable/ic_speaker"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>