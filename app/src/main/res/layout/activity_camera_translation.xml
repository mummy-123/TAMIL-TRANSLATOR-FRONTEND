<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FC">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2563EB"
        app:navigationIcon="@drawable/ic_back"
        app:title="Camera Translation"
        app:titleTextColor="@android:color/white" />

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#111827" />

    <Button
        android:id="@+id/btnSwitch"
        android:layout_margin="12dp"
        android:text="Tamil âžœ English"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Result Text -->
    <TextView
        android:id="@+id/txtResult"
        android:layout_margin="16dp"
        android:text="Detected text will appear here..."
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Actions -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGallery"
            android:text="Gallery"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:textColor="#2563EB"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnInstant"
            android:text="Instant"
            android:textAllCaps="false"
            android:backgroundTint="#2563EB"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnStop"
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Capture Button -->
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/btnCapture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_capture_outer"
            android:padding="10dp">

            <View
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_blue"
                android:layout_width="56dp"
                android:layout_height="56dp" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>