<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FC">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2563EB"
        app:navigationIcon="@drawable/ic_back"
        app:title="Offline Mode"
        app:titleTextColor="@android:color/white"/>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Download Languages Card -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_card"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_download"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Download Languages"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Use translation without internet"
                        android:textSize="12sp"
                        android:textColor="#777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>

            <!-- Available Offline Packs -->
            <TextView
                android:text="Available Offline Packs"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- English Pack -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_language"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="English → Tamil"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Downloaded"
                        android:textSize="12sp"
                        android:textColor="#16A34A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:src="@drawable/ic_check"
                    android:tint="#16A34A"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>

            <!-- Tamil Pack -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_white_card"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_language"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Tamil → English"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Not downloaded"
                        android:textSize="12sp"
                        android:textColor="#DC2626"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:text="Download"
                    android:textAllCaps="false"
                    android:backgroundTint="#2563EB"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
